generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  password    String
  fullName    String
  phoneNumber String
  roleId      String   @db.ObjectId
  role        Role     @relation(fields: [roleId], references: [id])
  avatarCloudId   String?  @default("public/images/default_avatar")
  status      String   @default("ACTIVE")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  lastPasswordChangeAt DateTime? @default(now()) 
  loginHistory         LoginHistory[]
  @@map("User")
}

model Role {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?
  permissions String[]
  users       User[]

  @@map("Role")
}

model Log {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  method      String   // GET, POST, PUT, DELETE
  path        String   // /api/auth/login
  statusCode  Int      // 200, 404, 500
  userId      String?  @db.ObjectId // Nếu user đã đăng nhập
  userEmail   String?  // Email của user
  ipAddress   String?  // IP của client
  userAgent   String?  // Browser/device info
  requestBody String?  // JSON string của request body (không lưu password)
  responseTime Int?    // Thời gian xử lý request (ms)
  errorMessage String? // Error message nếu có
  createdAt   DateTime @default(now())

  @@map("Log")
}

model LoginHistory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  
  ip        String?
  location  String?  // Ví dụ: "Houston, TX"
  device    String?  // Ví dụ: "Chrome / Windows"
  os        String?
  browser   String?
  
  loginAt   DateTime @default(now())

  @@map("LoginHistory")
}

model BlackListToken {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  token     String
  createdAt DateTime @default(now())

  @@map("BlackListToken")
}

model Warehouse {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  warehouseId String?  @unique // Custom format: WH-001, WH-002, etc.
  name        String
  location    String
  capacity    Int
  description String?
  status      String   @default("ACTIVE") // ACTIVE, MAINTENANCE
  createdBy   String?  @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  inventories Inventory[]

  @@unique([name, location])
  @@map("Warehouse")
  
}
// Sequence model for custom ID generation
model Sequence {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String  @unique // e.g., "equipment"
  value     Int     @default(0)

  @@map("Sequence")
}

model Equipment {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  equipmentId     String   @unique // Custom format: EQ-001, EQ-002, etc.
  name            String   @unique
  serialNumber    String   @unique
  type            String
  model           String   // Equipment model (e.g., HP-100, Series-X, etc.)
  status          String   @default("Active") // Active, Inactive, Maintenance
  location        String
  manufacturer    String?
  installDate     DateTime
  description     String?
  isDeleted       Boolean  @default(false)
  specifications  Json?    // Flexible technical specs
  lastMaintenanceDate   DateTime?
  nextMaintenanceDate   DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  inventories     Inventory[]
  maintenanceHistory    MaintenanceHistory[]

  @@map("Equipment")
}
model MaintenanceHistory {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  equipmentId   String     @db.ObjectId
  equipment     Equipment  @relation(fields: [equipmentId], references: [id])
  date          DateTime
  type          String     // Preventive, Corrective, Calibration
  description   String
  performedBy   String
  status        String     // Completed, Pending, Cancelled
  cost          Float?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("MaintenanceHistory")

}

// Inventory Model - Tracks equipment quantity in warehouses
model Inventory {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  inventoryId       String?  @unique // Custom format: INV-001, INV-002, etc.
  warehouseId       String   @db.ObjectId
  warehouse         Warehouse @relation(fields: [warehouseId], references: [id])
  equipmentId       String   @db.ObjectId
  equipment         Equipment @relation(fields: [equipmentId], references: [id])
  quantity          Int      @default(0)
  stockStatus       String   // IN_STOCK, LOW, OUT_OF_STOCK
  lastUpdated       DateTime @updatedAt
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  inventoryLedgers  InventoryLedger[]

  @@unique([warehouseId, equipmentId])
  @@map("Inventory")
}

// Inventory Ledger Model - Tracks all inventory movements (receive/dispatch)
model InventoryLedger {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  inventoryId     String    @db.ObjectId
  inventory       Inventory @relation(fields: [inventoryId], references: [id])
  movementType    String    // RECEIVE, DISPATCH
  quantity        Int
  supplierName    String?   // For RECEIVE
  destination     String?   // For DISPATCH
  receiverId      String?   // User who received/dispatched
  notes           String?
  dateReceived    DateTime? // For RECEIVE
  dateDispatched  DateTime? // For DISPATCH
  createdAt       DateTime  @default(now())

  @@map("InventoryLedger")
}